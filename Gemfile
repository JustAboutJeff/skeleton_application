source 'https://rubygems.org'

ruby '1.9.3'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'
gem 'bcrypt-ruby'

# oauth for twitter login and twitter ruby helper gem
gem 'oauth'
gem 'twitter'

# sidekiq and redis for background job processing
gem 'sidekiq'
gem 'redis'

group :development, :test do
  gem 'faker'
  gem 'shotgun'
  gem 'rspec'
end
